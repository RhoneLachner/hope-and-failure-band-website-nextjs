generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Inventory {
  id        String   @id
  title     String
  price     Float
  sizes     String[]
  inventory Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([title], name: "idx_inventory_title")
  @@index([updatedAt(sort: Desc)], name: "idx_inventory_updated")
  @@map("inventory")
}

model Event {
  id          String   @id @default(cuid())
  title       String
  date        String
  time        String?
  venue       String
  location    String
  description String?
  ticketLink  String?
  isPast      Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([date(sort: Desc)], name: "idx_events_date")
  @@index([isPast], name: "idx_events_ispast")
  @@index([isPast, date(sort: Desc)], name: "idx_events_ispast_date")
  @@index([createdAt(sort: Desc)], name: "idx_events_created")
  @@map("events")
}

model Video {
  id          String   @id @default(cuid())
  youtubeId   String
  title       String
  description String?
  order       Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([order(sort: Asc)], name: "idx_videos_order")
  @@index([youtubeId], name: "idx_videos_youtubeid")
  @@index([createdAt(sort: Desc)], name: "idx_videos_created")
  @@map("videos")
}

model Bio {
  id          String   @id @default("1")
  mainText    String[]
  bandImage   String
  pastMembers String[]
  photography Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([updatedAt(sort: Desc)], name: "idx_bio_updated")
  @@map("bio")
}

model Lyrics {
  id             String   @id @default(cuid())
  title          String
  lyrics         String
  order          Int
  isInstrumental Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([order(sort: Asc)], name: "idx_lyrics_order")
  @@index([isInstrumental], name: "idx_lyrics_instrumental")
  @@index([createdAt(sort: Desc)], name: "idx_lyrics_created")
  @@map("lyrics")
}
