generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Inventory {
  id        String   @id
  title     String
  price     Float
  sizes     String[]
  inventory Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("inventory")
}

model Event {
  id          String   @id @default(cuid())
  title       String
  date        String
  time        String?
  venue       String
  location    String
  description String?
  ticketLink  String?
  isPast      Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("events")
}

model Video {
  id          String   @id @default(cuid())
  youtubeId   String
  title       String
  description String?
  order       Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("videos")
}

model Bio {
  id          String   @id @default("1")
  mainText    String[]
  bandImage   String
  pastMembers String[]
  photography Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("bio")
}

model Lyrics {
  id             String   @id @default(cuid())
  title          String
  lyrics         String
  order          Int
  isInstrumental Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("lyrics")
}
